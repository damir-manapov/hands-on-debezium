{
  "name": "hands-on-debezium",
  "version": "0.1.0",
  "description": "Hands-on project for learning Debezium CDC - syncing PostgreSQL to Trino/Iceberg and Elasticsearch",
  "author": "Damir Manapov",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "up": "docker compose up starter --wait",
    "down": "docker compose down",
    "restart": "docker compose restart",
    "reset": "docker compose down -v --remove-orphans",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.12.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.17.0",
    "postgres": "^3.4.5"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22"
  }
}
