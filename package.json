{
  "name": "hands-on-debezium",
  "version": "0.1.0",
  "description": "Hands-on project for learning Debezium CDC - syncing PostgreSQL to Trino/Iceberg and Elasticsearch",
  "author": "Damir Manapov",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "compose:pull": "docker compose -f compose/docker-compose.yml pull",
    "compose:up": "docker compose -f compose/docker-compose.yml up starter --wait",
    "compose:down": "docker compose -f compose/docker-compose.yml down",
    "compose:restart": "docker compose -f compose/docker-compose.yml restart",
    "compose:reset": "docker compose -f compose/docker-compose.yml down -v --remove-orphans",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "biome:migrate": "biome migrate --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.3.1",
    "postgres": "^3.4.8",
    "trino-client": "^0.2.9"
  },
  "pnpm": {
    "overrides": {
      "axios": ">=1.13.5"
    }
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22"
  }
}
